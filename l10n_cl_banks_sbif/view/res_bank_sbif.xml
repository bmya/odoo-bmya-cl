<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="res_bank_sbif_form">
            <field name="name">bank.sbif.form</field>
            <field name="model">res.bank</field>
            <field name="inherit_id" ref="base.view_res_bank_form" />
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/group/field[@name='name']" position="before">
                    <field name="sbif_code" />
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="res_bank_sbif_tree">
            <field name="name">bank.sbif.tree</field>
            <field name="model">res.bank</field>
            <field name="inherit_id" ref="base.view_res_bank_tree" />
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="sbif_code" />
                </field>
            </field>
        </record>
    </data>
</openerp>