<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_picking_inherited_form" model="ir.ui.view">
        <field name="name">stock.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <field name="backorder_id" position="after">
                <field name="product_uom_qty"/>
                <field name="move_file" filename="filename" attrs="{'invisible':[('picking_type_code', '!=', 'internal')]}" required="False"/>
                <field name="filename" invisible="1"/>
            </field>
            <!--<xpath expr="//notebook/page/field[@name='pack_operation_product_ids']/tree/field[@name='product_id']" position="after">
                <field name="move_description"/>
            </xpath>-->
            <!--<xpath expr="//sheet/notebook/page/field[@name='move_lines']/tree/field[@name='product_uom']" position="before">
                <field name="move_description"/>
            </xpath>
            -->
        </field>
    </record>
    <record id="view_description_picking_form" model="ir.ui.view">
        <field name="name">view.description.picking.form</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_picking_form"/>
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="move_description"/>
            </field>
        </field>
    </record>
        <record id="view_description_picking_tree" model="ir.ui.view">
        <field name="name">view.description.picking.tree</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_picking_tree"/>
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="move_description"/>
            </field>
        </field>
    </record>
</odoo>