<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_financial_indicators_form" model="ir.ui.view">
            <field name="name">financial.indicators.form</field>
            <field name="model">webservices.server</field>
            <field name="inherit_id" ref="webservices_generic.view_webservices_server_form" />
            <field name="arch" type="xml">
            	<xpath expr="/form/sheet/div/button[@string='Test Connection']" position="after">
            		<button string="Update Currency" type="object" name="action_update_currency"
                                    class="oe_stat_button" icon="fa-magnet" attrs="{'invisible':[('name', 'not in', ['SBIFUSD', 'SBIFUF', 'SBIFUTM', 'SBIFEUR'])]}"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>